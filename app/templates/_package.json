{
  "private": true,
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    <% if (includeModernizr && !includeBootstrap && !includeJQuery) { %>
    "modernizr": "^3.6.0"
    <% } %>
    <% if (includeModernizr && (includeBootstrap || includeJQuery)) { %>
    "modernizr": "^3.6.0",
    <% } %>
    <% if(includeJQuery && !includeBootstrap) { %>
    "jquery": "^3.3.1"
    <% } %>
    <% if (includeBootstrap) { %>
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1"
    <% } %>
  },
  "devDependencies": {
	  <% if (includeBabel) { %>
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    <% } %>
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.5.2",
    "browser-sync": "^2.2.1",
    "cssnano": "^4.1.7",
    "del": "^3.0.0",
    "gulp": "^3.9.0",
    <% if (includeBabel) { %>
    "gulp-babel": "^8.0.0",
    <% } %>
    "gulp-cache": "^1.0.2",
    "gulp-eslint": "^5.0.0",
    <% if (includeSass) { %>
    "gulp-filter": "^5.1.0",
    <% } %>
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-load-plugins": "^1.2.4",
    <% if (includeBabel || includeSass) { %>
    "gulp-plumber": "^1.0.1",
    <% } %>
    "gulp-postcss": "^8.0.0",
    <% if (includeSass) { %>
    "gulp-sass": "^4.0.2",
    <% } %>
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-uglify": "^3.0.1",
    "gulp-useref": "^3.0.0",
    "mocha": "^5.2.0",
    "run-sequence": "^2.2.1",
    "yargs": "12.0.2"
  }, 
  "scripts": {
    <% if (includeModernizr) { %>
    "build:modernizr": "modernizr -c modernizr.json -d app/scripts/modernizr.js",
    "serve:test": "npm run build:modernizr && gulp serve:test",
    "serve:dist": "npm run build:modernizr && gulp serve:dist",
    "start": "npm run build:modernizr && gulp serve",
    <% } %>    
    <% if (!includeModernizr) { %>
    "serve:test": "gulp serve:test",
    "serve:dist": "gulp serve:dist",
    "start": "gulp serve",
    <% } %>     
    "build": "gulp",
    "test": "npm run serve:test"
  }, 
  "eslintConfig": {
    "env": {
      <% if (includeBabel) { %>
      "es6": true,
      <% } %>
      "node": true,
      "browser": true
      <% if (includeJQuery) { %>,
      "jquery": true
      <% } %>
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
